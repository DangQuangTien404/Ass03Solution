@inject eStore.AdminAuthService AuthService
@inject Microsoft.AspNetCore.Components.NavigationManager Navigation
@rendermode InteractiveServer
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">eStore</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Counter
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="weather">
                <span class="bi bi-list-nested-nav-menu"></span> Weather
            </NavLink>
        </div>

        @if (AuthService.IsLoggedIn && AuthService.IsAdmin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="products">
                    <span class="bi bi-archive-nav-menu"></span> Products
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="categories">
                    <span class="bi bi-folder-nav-menu"></span> Categories
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="orders">
                    <span class="bi bi-basket-nav-menu"></span> Orders
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="sales-report">
                    <span class="bi bi-graph-up-nav-menu"></span> Sales Report
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="members">
                    <span class="bi bi-people-nav-menu"></span> Members
                </NavLink>
            </div>
        }
        else if (AuthService.IsLoggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="profile">
                    <span class="bi bi-person-nav-menu"></span> Profile
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="orders">
                    <span class="bi bi-basket-nav-menu"></span> Orders
                </NavLink>
            </div>
        }

        @if (AuthService.IsLoggedIn)
        {
            <div class="nav-item px-3">
                <a class="nav-link" href="#" @onclick="Logout">
                    <span class="bi bi-box-arrow-right-nav-menu"></span> Logout
                </a>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-door-open-nav-menu"></span> Login
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        AuthService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        AuthService.OnChange -= StateHasChanged;
    }

    private void Logout()
    {
        AuthService.SignOut();
        Navigation.NavigateTo("/");
    }
}
